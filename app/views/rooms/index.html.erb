
<div class ="reserve_index">
  <div class="information">
    <h3>登録したルーム一覧</h3>
  </div>

  <table>
    <thead>
      <tr>

        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <% if room.img.attached? %>
              <%= image_tag room.img ,class:"room-icon"%>
            <% end %>
          </td>
          <td><%= link_to room.name , room,class:"name_link" %></td>
          <td><%= room.description %></td>
          <td><%= room.price %></td>
          <td><%= room.created_at.to_s(:datetime_jp) %></td>
          <td><%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </tr>
      <% end %>

      
      </tbody>
   </table>
</div>
