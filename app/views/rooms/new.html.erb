<div class="room_page">
  <div class="room_main">
   <%= form_with model: @room do |f| %>
    <table class="room-register">
      <tr>
        <th><%= f.label :ルーム名, class: "label" %></th>
        <td><%= f.text_field :name,  placeholder: "ルーム名入力", autofocus: true, autocomplete: "name",  class: "input" %></td>
      </tr>
      <tr>
        <th><%= f.label :ルーム紹介, class: "label" %></th>
        <td><%= f.text_area :description, placeholder: "ルーム説明入力",autofocus: true, autocomplete: "description",class: "textarea" %></td>
      </tr>
      <tr>
        <th><%= f.label :料金, class: "label" %></th>
        <td> <%= f.text_field :price, placeholder: "１日あたりの料金を入力", autofocus: true, autocomplete: "price",class: "input" %></td>
      </tr>
		  <tr>
        <th><%= f.label :住所, class: "label" %></th>
        <td><%= f.text_field :address, placeholder: "住所入力", autofocus: true, autocomplete: "address",class: "input" %></td>
      </tr>
      <tr>
        <th><%= f.label :ルーム画像, class: "label" %></th>
        <td>
          <% if @room.img.attached? %>
            <%= image_tag @room.img ,class:"room-icon"%>
          <% end %>
          <%= f.file_field :img %>
        </td>
      </tr>
    </table>

    <div>
      <ul class="room-submit">
        <li><%= f.submit "登録" , id:"submit-btn"%></li>
		    <li ><%= link_to "部屋一覧に戻る", :rooms %></li>
      </ul>
    </div>
   <% end %>
  </div>
</div>
